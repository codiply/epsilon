@model Epsilon.Logic.Forms.Submission.MoveOutDetailsForm

@using Epsilon.Resources.Web.Submission
@{
    ViewBag.Title = SubmissionResources.SubmitMoveOutDetails_PageTitle;
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/bootstrap-datepicker")
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker();
        });
    </script>
}

@using (Html.BeginForm("SubmitMoveOutDetailsSave", "Submission"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@SubmissionResources.SubmitMoveOutDetails_PageHeader</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.TenancyDetailsSubmissionUniqueId)
        @Html.HiddenFor(model => model.ReturnToSummary)

        <div class="form-group">
            @Html.LabelFor(model => model.MoveOutDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.MoveOutDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.MoveOutDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="alert alert-info">
                <p>
                    <input type="checkbox" name="confirmedText" data-ng-model="confirmedText">
                    @SubmissionResources.SubmitMoveOutDetails_ConfirmationText
                </p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" class="btn btn-default"
                       disabled data-ng-disabled="!confirmedText"
                       value="@SubmissionResources.SubmitMoveOutDetails_SubmitButtonText" />
            </div>
        </div>
    </div>
}

@using Epsilon.Logic.Constants
@using Epsilon.Resources.Common
@using Epsilon.Web.Controllers

<div>
    @if (Model.ReturnToSummary)
    {
        @Html.ActionLink(CommonResources.BackLinkText, SubmissionController.MY_SUBMISSIONS_SUMMARY_ACTION)
    }
    else
    {
        @Html.ActionLink(CommonResources.BackLinkText, AppConstant.AUTHENTICATED_USER_HOME_ACTION, AppConstant.AUTHENTICATED_USER_HOME_CONTROLLER)
    }
</div>
