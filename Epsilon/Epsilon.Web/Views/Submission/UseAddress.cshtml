@model Epsilon.Web.Models.ViewModels.Shared.AddressDetailsViewModel
@using Epsilon.Resources.Web.Submission

@{
    ViewBag.Title = SubmissionResources.UseAddress_PageTitle;
}

<h4>@SubmissionResources.UseAddress_PageHeader</h4>
<hr />

@Html.Partial("_AddressDetails", Model)

@using (Html.BeginForm("UseAddressConfirmed", "Submission"))
{

    <div class="form-horizontal">
        @Html.AntiForgeryToken()


        <div class="form-group">
            <div class="alert-info">
                <p><input type="checkbox" name="confirmedText" data-ng-model="confirmedText">
                    @SubmissionResources.UseAddress_ConfirmationText
                </p>
            </div>
        </div>

        <div class="form-group">
            <input type="hidden" name="selectedAddressId" value="@Model.Id" />
            <div>
                <input type="submit" value="@SubmissionResources.UseAddress_SubmitButton" class="btn btn-default" data-ng-disabled="!confirmedText" />
            </div>
        </div>
    </div>
}
