@model Epsilon.Logic.Forms.Manage.ChangePreferencesForm

@using Epsilon.Resources.Web.Manage

@{
    ViewBag.Title = ManageResources.ChangePreferences_PageTitle;
}

<h2>@(ManageResources.ChangePreferences_PageHeader).</h2>

@using (Html.BeginForm("ChangePreferences", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@ManageResources.ChangePreferences_FormTitle</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.LanguageId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.LanguageId, null, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@ManageResources.ChangePreferences_FormSubmitButtonText" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}