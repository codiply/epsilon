@using Epsilon.Web.Models.ViewModels.Shared
@using Epsilon.Resources.Common
@using Epsilon.Logic.Constants


@model StarRatingReadonlyViewModel


@{ 
    string title = string.Empty;
    if (Model.Rating.HasValue)
    {
        switch (Model.Rating.Value)
        {
            case 1:
                title = CommonResources.StarRating_1_Title;
                break;
            case 2:
                title = CommonResources.StarRating_2_Title;
                break;
            case 3:
                title = CommonResources.StarRating_3_Title;
                break;
            case 4:
                title = CommonResources.StarRating_4_Title;
                break;
            case 5:
                title = CommonResources.StarRating_5_Title;
                break;
            default:
                throw new ArgumentException(string.Format("Unexpected rating value {0}", Model.Rating));

        }
    }
}

@if (Model.Rating.HasValue)
{
<span title="@title">
    @for (var i = AppConstant.RATING_MIN_VALUE; i <= AppConstant.RATING_MAX_VALUE; i++)
    {
        if (i <= Model.Rating)
        {
            <span class="glyphicon glyphicon-star" ></span>
        }
        else
        {
            <span class="glyphicon glyphicon-star-empty" ></span>
        }
    }
</span>
}