@model Epsilon.Web.Models.ViewModels.OutgoingVerification.PickOutgoingVerificationViewModel

@using Epsilon.Resources.Web.OutgoingVerification
@using Epsilon.Resources.Common
@using Epsilon.Logic.Models
@using Epsilon.Logic.Constants

@{
    ViewBag.Title = OutgoingVerificationResources.Pick_PageTitle;

    var userInterfaceCustomisation = (UserInterfaceCustomisationModel)ViewBag.UserInterfaceCustomisation;
}

<h2>@OutgoingVerificationResources.Pick_Header</h2>


@using (Html.BeginForm("PickConfirmed", "OutgoingVerification"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VerificationUniqueId)
    @Html.HiddenFor(model => model.ReturnToSummary)

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3">@CommonResources.Country</label>
            <div class="col-md-9">
                <div class="form-control">
                    @AppConstant.COUNTRY_DISPLAY_FIELD_SELECTOR(userInterfaceCustomisation.UserResidenceCountry)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="alert alert-info">
                <p>
                    @OutgoingVerificationResources.Pick_ConfirmationText
                </p>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="@OutgoingVerificationResources.Pick_SubmitButton"
                       class="btn btn-default"
                       data-click-once />
            </div>
        </div>
    </div>
}